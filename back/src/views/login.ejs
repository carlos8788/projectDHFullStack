<!DOCTYPE html>
<html lang="es">

<head>
        <%- include('partial/head') %>

</head>

<body>

    <%- include('partial/header') %>

    <main class="form-container">

        <form class="form" method="POST" action="/user/login">
            <h2 class="titulo-form-registro">Inicio de sesión</h2>
        
            <% if (locals.errors && errors.login) { %>
                <div class="alert alert-danger">
                    <%= errors.login.msg %>
                </div>
            <% } %>
        
            <div class="div-form">
                <label for="email">Correo Electrónico</label>
                <input type="email" id="email" name="email" required
                       class="<%= (locals.errors && errors.email) ? 'error-input' : '' %>">
                <% if (locals.errors && errors.email) { %>
                    <p class="msg-error"><%= errors.email.msg %></p>
                <% } %>
            </div>
        
            <div class="div-form">
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="password" required
                       class="<%= (locals.errors && errors.password) ? 'error-input' : '' %>">
                <% if (locals.errors && errors.password) { %>
                    <p class="msg-error"><%= errors.password.msg %></p>
                <% } %>
            </div>
        
            <div class="div-form-bt">
                <button type="submit" class="btnPrimary">Ingresar</button>
                <button type="reset" class="btnPrimary">Cancelar</button>
            </div>
        </form>
        
    </main>

    <%- include('partial/footer') %>
    <script src="/js/login.js"></script>
</body>

</html>