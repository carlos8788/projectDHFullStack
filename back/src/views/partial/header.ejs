<header class="header">

    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid" id="navbar">
            <div class="navbar-custom">
                <a class="navbar-brand" href="/">
                    <div class="navbar-logo-img"></div>

                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto">
                    <% if (!user || (user && user.role !== 'superadmin')) { %>
                    
                    <li class="item">
                        <a class="link" href="/cart">Carrito</a>
                    </li>
                    <% } %>
                    <li class="item">
                        <a class="link" href="/product/products">Productos</a>
                    </li>
                    <% if (user) { %>
                        <li class="item">
                            <a class="link" href="/user/profile">Perfil</a>
                        </li>
                        <% if (user.role==='superadmin') { %>
                        <li class="item">
                            <a class="link" href="/product/formCreateProduct">Crear Producto</a>
                        </li>
                        <li class="item">
                            <a class="link" href="http://localhost:5173">Ir al dashboard</a>
                        </li>
                        <% } %>
                        <li class="item">
                            <a class="link" href="/user/logout">Cerrar Sesión</a>
                        </li>
                    <% } else { %>
                        <li class="item">
                            <a class="link" href="/user/register">Registrarse</a>
                        </li>
                        <li class="item">
                            <a class="link" href="/user/login">Iniciar Sesión</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    <div class="search-form">
        <form class="d-flex justify-content-center" role="search" action="/product/searchProducts" id="form-search">
            <input class=" me-2" type="search" placeholder="Search" name="search" aria-label="Search">
            <button class="" type="submit"><i class="fas fa-search"></i></button>
        </form>

    </div>

</header>
<script src="/js/searchProductsFront.js"></script>
<script src="/js/navBarLinks.js"></script>